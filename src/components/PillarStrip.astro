---
interface Props {
  pillars: string[];
  active?: string;
}
const { pillars, active } = Astro.props;
---
<div class="pillar-strip">
  <div class="pillar-strip-inner container">
    {pillars.map((p) => (
      <button
        class:list={['pillar-tab', { active: p === active }]}
        data-pillar={p}
      >
        {p}
      </button>
    ))}
  </div>
</div>

<style>
  .pillar-strip {
    background: var(--off);
    border-bottom: 1px solid var(--line);
  }
  .pillar-strip-inner {
    display: flex;
    gap: 32px;
    overflow-x: auto;
  }
  .pillar-tab {
    font-family: var(--sans);
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
    background: none;
    border: none;
    padding: 14px 0;
    cursor: pointer;
    white-space: nowrap;
    border-bottom: 2px solid transparent;
    transition: color 0.2s, border-color 0.2s;
  }
  .pillar-tab:hover {
    color: var(--black);
  }
  .pillar-tab.active {
    color: var(--black);
    border-bottom: 2px solid var(--black);
  }
</style>
