---
interface Props {
  num: number;
  title: string;
  excerpt: string;
  pillar: string;
  readTime: number;
  slug: string;
}
const { num, title, excerpt, pillar, readTime, slug } = Astro.props;
---
<a href={`/blog/${slug}`} class="article-row">
  <span class="article-row-num">#{String(num).padStart(2, '0')}</span>
  <div class="article-row-body">
    <h3 class="article-row-title">{title}</h3>
    <p class="article-row-excerpt">{excerpt}</p>
  </div>
  <span class="article-row-meta">{readTime} min</span>
</a>

<style>
  .article-row {
    display: grid;
    grid-template-columns: 80px 1fr 120px;
    gap: 32px;
    align-items: start;
    padding: 24px 16px;
    margin: 0 -16px;
    border-bottom: 1px solid var(--line);
    transition: background 0.2s;
  }
  .article-row:hover { background: var(--off); }
  .article-row-num {
    font-family: var(--sans);
    font-size: 11px;
    font-weight: 800;
    color: var(--orange);
    text-transform: uppercase;
    letter-spacing: 0.14em;
    padding-top: 4px;
  }
  .article-row-title {
    font-family: var(--sans);
    font-size: 17px;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.25;
    color: var(--black);
  }
  .article-row-excerpt {
    font-family: var(--serif);
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-med);
    margin-top: 6px;
  }
  .article-row-meta {
    font-family: var(--sans);
    font-size: 12px;
    color: var(--muted);
    text-align: right;
    padding-top: 4px;
  }

  @media (max-width: 768px) {
    .article-row {
      grid-template-columns: 1fr;
      gap: 8px;
    }
    .article-row-meta { text-align: left; }
  }
</style>
