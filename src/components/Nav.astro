<nav class="nav">
  <div class="nav-inner container">
    <a href="/" class="logo">
      <span class="rev">rev</span><span class="true">true</span>
    </a>
    <div class="nav-links">
      <a href="/">Blog</a>
      <a href="/#newsletter">Newsletter</a>
      <a href="/about" class="cta-btn">Early Access</a>
    </div>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255,255,255,0.94);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--line);
    height: 58px;
    display: flex;
    align-items: center;
  }
  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  .logo {
    font-family: var(--sans);
    font-size: 22px;
    font-weight: 800;
    letter-spacing: -0.03em;
    line-height: 1;
  }
  .rev { color: var(--navy); }
  .true { color: var(--orange); }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 28px;
  }
  .nav-links a {
    font-family: var(--sans);
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.01em;
    color: var(--muted);
    transition: color 0.2s;
  }
  .nav-links a:hover { color: var(--black); }
  .cta-btn {
    background: var(--orange) !important;
    color: var(--white) !important;
    border-radius: 100px;
    padding: 8px 18px;
    font-weight: 600 !important;
  }
  .cta-btn:hover { opacity: 0.9; }
</style>
