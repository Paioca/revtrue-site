---
interface Props {
  num: string;
  label: string;
  source: string;
}
const { num, label, source } = Astro.props;
---
<div class="stat-block">
  <span class="stat-num">{num}</span>
  <div class="stat-body">
    <p class="stat-label">{label}</p>
    <p class="stat-source">{source}</p>
  </div>
</div>

<style>
  .stat-block {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 24px;
    border-top: 1px solid var(--line);
    border-bottom: 1px solid var(--line);
    padding: 28px 0;
    margin: 40px 0;
    align-items: center;
  }
  .stat-num {
    font-family: var(--sans);
    font-size: 60px;
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 1;
    color: var(--orange);
  }
  .stat-label {
    font-family: var(--sans);
    font-size: 16px;
    font-weight: 500;
    color: var(--text-body);
    line-height: 1.4;
  }
  .stat-source {
    font-family: var(--sans);
    font-size: 12px;
    color: var(--muted);
    margin-top: 6px;
  }
</style>
