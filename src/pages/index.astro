---
import Base from '../layouts/Base.astro';
---
<Base
  title="Revtrue"
  description="Revenue insights, faster. Upload your data and see the truth in minutes."
  canonical="https://revtrue.tech/"
  ogType="website"
>
  <div class="lp">
    <main class="lp-main">
      <h1 class="lp-logo fu fu1">
        <span class="rev">Rev</span><span class="true">true</span>
      </h1>
      <p class="lp-tagline fu fu2">
        Revenue insights, faster. Upload your data and see the truth in minutes.
      </p>
      <form action="https://app.revtrue.tech/login" method="get" class="lp-form fu fu3">
        <input
          type="email"
          name="email"
          placeholder="Enter your email"
          class="lp-input"
        />
        <button type="submit" class="lp-btn">Get started</button>
      </form>
    </main>
  </div>
</Base>

<style>
  .lp {
    display: flex;
    min-height: 100vh;
    align-items: center;
    justify-content: center;
    padding: 0 16px;
  }
  .lp-main {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    text-align: center;
  }
  .lp-logo {
    font-family: var(--sans);
    font-size: 36px;
    font-weight: 600;
    letter-spacing: -0.025em;
  }
  .lp-logo .rev {
    font-style: italic;
    color: var(--orange);
  }
  .lp-logo .true {
    color: var(--black);
  }
  .lp-tagline {
    max-width: 448px;
    font-family: var(--sans);
    font-size: 18px;
    line-height: 1.6;
    color: var(--muted);
  }
  .lp-form {
    display: flex;
    width: 100%;
    max-width: 384px;
    gap: 12px;
  }
  .lp-input {
    flex: 1;
    border: 1px solid var(--line);
    border-radius: 8px;
    background: var(--white);
    padding: 10px 12px;
    font-family: var(--sans);
    font-size: 16px;
    color: var(--black);
    outline: none;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  .lp-input::placeholder {
    color: var(--dim);
  }
  .lp-input:focus {
    border-color: var(--orange);
    box-shadow: 0 0 0 1px var(--orange);
  }
  .lp-btn {
    white-space: nowrap;
    border-radius: 8px;
    background: var(--orange);
    padding: 10px 24px;
    font-family: var(--sans);
    font-size: 14px;
    font-weight: 600;
    color: var(--white);
    transition: background 0.2s;
  }
  .lp-btn:hover {
    background: #d8571f;
  }
  @media (max-width: 480px) {
    .lp-form {
      flex-direction: column;
    }
  }
</style>
