---
import BlogLayout from '../../../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog-en');
  return posts.map((post) => ({
    params: { slug: post.slug.replace(/^\d+-/, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const derivedSlug = post.slug.replace(/^\d+-/, '');
const canonical = `https://revtrue.tech/en/blog/${derivedSlug}`;

// Check for PT pair by matching derived slug
const ptPosts = await getCollection('blog-pt');
const ptPair = ptPosts.find(p => p.slug.replace(/^\d+-/, '') === derivedSlug);

const alternates = ptPair ? [
  { hreflang: 'en', href: `https://revtrue.tech/en/blog/${derivedSlug}` },
  { hreflang: 'pt-BR', href: `https://revtrue.tech/pt/blog/${derivedSlug}` },
  { hreflang: 'x-default', href: `https://revtrue.tech/en/blog/${derivedSlug}` },
] : [];

const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  day: '2-digit', month: 'short', year: 'numeric',
});
---
<BlogLayout
  title={post.data.title}
  description={post.data.description || post.data.excerpt}
  canonical={canonical}
  alternates={alternates}
  ogType="article"
>
  <article class="post container">
    <header class="post-header">
      <h1 class="post-title">{post.data.title}</h1>
      <time class="post-date" datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
    </header>
    <div class="post-body">
      <Content />
    </div>
  </article>
</BlogLayout>

<style>
  .post {
    padding-top: 60px;
    padding-bottom: 80px;
    max-width: 720px;
  }
  .post-header {
    margin-bottom: 40px;
    border-bottom: 1px solid var(--line);
    padding-bottom: 24px;
  }
  .post-title {
    font-family: var(--sans);
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 800;
    letter-spacing: -0.03em;
    line-height: 1.1;
    color: var(--black);
  }
  .post-date {
    display: block;
    font-family: var(--sans);
    font-size: 13px;
    color: var(--muted);
    margin-top: 12px;
  }
  .post-body :global(h2) {
    font-family: var(--sans);
    font-size: 26px;
    font-weight: 800;
    letter-spacing: -0.025em;
    line-height: 1.15;
    color: var(--black);
    margin-top: 48px;
    margin-bottom: 20px;
  }
  .post-body :global(h3) {
    font-family: var(--sans);
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--muted);
    margin-top: 36px;
    margin-bottom: 12px;
  }
  .post-body :global(p) {
    margin-bottom: 24px;
  }
  .post-body :global(strong) {
    font-weight: 500;
    color: var(--black);
  }
  .post-body :global(a) {
    color: var(--orange);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  .post-body :global(ul), .post-body :global(ol) {
    padding-left: 20px;
    margin-bottom: 24px;
  }
  .post-body :global(li) {
    margin-bottom: 8px;
    list-style: disc;
  }
  .post-body :global(ol li) {
    list-style: decimal;
  }
  .post-body :global(hr) {
    border: none;
    border-top: 1px solid var(--line);
    margin: 48px 0;
  }
</style>
