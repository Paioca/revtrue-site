---
import Base from './Base.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  alternates?: { hreflang: string; href: string }[];
  ogType?: string;
}
const { title = 'Blog', description, canonical, alternates, ogType } = Astro.props;
---
<Base title={title} description={description} canonical={canonical} alternates={alternates} ogType={ogType}>
  <Nav />
  <slot />
  <Footer />
</Base>
